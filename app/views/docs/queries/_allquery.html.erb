<%= form_tag search_path, method: 'get', id: 'form-search-all', class: 'navbar-form navbar-left input-group-addon' do %>
  <%= render partial: 'docs/queries/save_existing_fields', locals: {fieldname: "q"} %>
  <input type="text" name="q" value="<%= params[:q] %>" id="q"
  autofocus="autofocus" class="form-control searchin" placeholder="Search all fields" />
  <%= render partial: 'docs/queries/search_button', locals: {search_type: 'all'} %>
<% end %>
