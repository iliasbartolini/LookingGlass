<%= form_tag search_path, method: 'get', id: 'form-search-string', class: 'navbar-form navbar-left input-group-addon hide' do %>
  <%= render partial: 'docs/queries/save_existing_fields', locals: {fieldname: fieldname} %>
  <input type="text" name="<%= fieldname %>" value="<%= params[fieldname.to_sym]%>" id="<%= fieldname %>"
  autofocus="autofocus" class="form-control searchin" placeholder="Search" />
  <%= render partial: 'docs/queries/search_button', locals: {search_type: 'text-field'} %>
<% end %>
