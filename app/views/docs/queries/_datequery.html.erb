<% field_names = "" %>
<% @all_field_info.each do |f| %>
  <% if fieldname == f["Field Name"] %>
    <% field_names = f["Form Params"] %>
  <% end %>
<% end %>

<%= form_tag search_path, method: 'get', id: 'form-search-date', class: 'navbar-form navbar-left input-group-addon hide' do %>
<%= render partial: 'docs/queries/save_existing_fields', locals:
    {fieldname: [field_names[0], field_names[1]]} %>
<div class="searchin" id="<%= fieldname %>">
<input type="text" data-behaviour='datepicker' id="search-date-start" name="<%= field_names[0] %>">
 -
<input type="text" data-behaviour='datepicker' id="search-date-end" name="<%= field_names[1] %>">
<%= render partial: 'docs/queries/search_button', locals: {search_type: 'date-field'} %>
</div>
<% end %>

<script type="text/javascript">
$(document).ready(function() {
  $('[data-behaviour~=datepicker]').datepicker();
});
</script>
